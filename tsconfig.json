{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "jsx": "react-jsx",
    "moduleResolution": "node",
    "target": "esnext",
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "types": ["node"], // Ensures Node.js global types are included
    "typeRoots": ["./node_modules/@types", "./types"] // Custom types location
  },
  "include": ["types/**/*", "**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules"]
}
